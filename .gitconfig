[core]
  excludesfile = /Users/spkane/.gitignore
  editor = code --wait --new-window
  pager = /opt/homebrew/share/git-core/contrib/diff-highlight/diff-highlight | less -erFiJM~ -j3 --tabs=3

[format]
  numbered = auto

[gc]
  packrefs = 0

[sendemail]
  suppressfrom = true

[alias]
  ci = commit
  co = checkout
  co-pr = !sh -c 'git fetch upstream pull/$1/head:pr/$1 && git checkout pr/$1' -
  fe = fetch
  st = status
  br = branch
  dt = difftool
  mt = mergetool
  df  = diff --color-words
  sh = show --color-words
  a  = add
  l  = log
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  lg = log --pretty=format:'%C(yellow)%h%C(reset) %C(blue)%an%C(reset) %C(cyan)%cr%C(reset) %s %C(green)%d%C(reset)' --graph --date-order
  clobber = !git stash && git reset --hard && git clean -fd

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
  interactive = auto

[color "diff"]
  commit = green
  meta = yellow
  frag = cyan
  old = red
  new = green
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold grey
  newNormal = green bold
  newHighlight = green bold grey

[diff]
  tool = default-difftool

[difftool "default-difftool"]
  cmd = code --wait --new-window --diff $LOCAL $REMOTE

[difftool]
  prompt = false

[merge]
  log = true
  stat = true
  tool = vsc

[mergetool "vsc"]
  cmd = code --wait --new-window --merge $REMOTE $LOCAL $BASE $MERGED

[mergetool]
  keepBackup = true

[branch]
  autoseupmerge = always
  autosetuprebase = always

[branch "main"]
    mergeoptions = --ff-only

[branch "master"]
  mergeoptions = --ff-only

[branch "staging"]
  mergeoptions = --ff-only

[branch "production"]
  mergeoptions = --ff-only

[push]
  default = nothing
  autoSetupRemote = true
	followTags = true

[gitreview]
  username = spkane

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process

[hub]
  host = github.com

[url "git@github.com:"]
  insteadOf = https://github.com/

[url "git@github.com:"]
  insteadOf = http://github.com/

[init]
	templateDir = /Users/spkane/.git-template
  defaultBranch = main

[safe]
  directory = /Users/spkane/dev/spkane/vde_vmnet
  directory = /Users/spkane/dev/spkane/vde_vmnet/vde-2

[protocol "file"]
  allow = always

# Includes should be at the bottom
[include]
  path = ~/.gitconfig.personal

[includeIf "gitdir/i:~/class/"]
  path = ~/.gitconfig.personal.class

[includeIf "gitdir/i:~/dev/ditto/"]
  path = ~/.gitconfig.personal.ditto

